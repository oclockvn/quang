<!DOCTYPE html>
<html ng-app="quang">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - TienQuang</title>

    <link href="~/Content/lumx.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/fontawesome-stars.css" rel="stylesheet" />
    <link href="~/Content/animate.css" rel="stylesheet" />
    <link href="~/Content/styles/quang.css" rel="stylesheet" />

    @*@Styles.Render("~/Content/css")*@
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    <header id="heaer" class="header z-depth2">
        <div class="header__bg"></div>
        <nav class="header__nav">
            <div class="container">
                <h2 class="nav--left">
                    <a href="@Url.Action("Index","Home")">tien quang</a>
                </h2>
                <div class="nav--right">
                    <ul class="menu clearfix">
                        <li><a href="#">dev</a></li>
                        <li><a href="#">life</a></li>
                        <li><a href="#">portfolio</a></li>
                    </ul>
                    <lx-button lx-type="fab" lx-size="xl" class="btn-toggle-search bgc-main tc-white">
                        <i class="mdi mdi-magnify"></i>
                        <i class="mdi mdi-close"></i>
                    </lx-button>
                </div>
            </div>

            <div class="header__search z-depth4">
                <div class="search-wrapper container text-center pv+++">
                    <lx-text-field lx-label="search" lx-fixed-label="true" lx-icon="magnify">
                        <input type="text" ng-model="vm.textFields.fixed.emptyName">
                    </lx-text-field>
                </div>
            </div>
        </nav>

        @*<div class="header__search z-depth4">
            <div class="search-wrapper container text-center pv+++">
                <lx-text-field lx-label="search" lx-fixed-label="true" lx-icon="magnify">
                    <input type="text" ng-model="vm.textFields.fixed.emptyName">
                </lx-text-field>
            </div>
        </div>*@

        @*<div class="header__search__result bgc-white z-depth4 mt++ container"></div>*@
    </header>

    <main class="main">
        <div class="container">
            <div flex-container="row" flex-column="12">
                <div flex-item="7">
                    @RenderBody()
                </div>

                <div flex-item="5" class="right-content">
                    @Html.Partial("_Features")
                </div>
            </div>

        </div>

        

        <lx-button lx-type="fab" lx-size="xl" class="btn-scroll-top bgc-main tc-white"><i class="mdi mdi-chevron-up"></i></lx-button>
    </main>

    <footer id="footer" class="footer">
        <section class="famous-quote">
            <h5>lorem ipsum</h5>
            <p>Google is the new corporate homepage.</p>
        </section>

        <section class="footer-social">
            <p class="text-center socials">
                <lx-button lx-size="l" lx-type="fab"><i class="mdi mdi-facebook"></i></lx-button>
                <lx-button lx-size="l" lx-type="fab"><i class="mdi mdi-twitter"></i></lx-button>
                <lx-button lx-size="l" lx-type="fab"><i class="mdi mdi-google-plus"></i></lx-button>
                <lx-button lx-size="l" lx-type="fab"><i class="mdi mdi-github-box"></i></lx-button>
                <lx-button lx-size="l" lx-type="fab"><i class="mdi mdi-linkedin"></i></lx-button>
            </p>
            <ul class="sitemap">
                <li><a href="#">home</a></li>
                <li><a href="#">about</a></li>
                <li><a href="#">sitemap</a></li>
                <li><a href="#">policy &amp; privacy</a></li>
            </ul>
        </section>

        <section class="footer-legal">
            <span>
                <a href="/">PTQ</a>
                &copy; 2016 Phan Tien Quang
            </span>
            <span>Made with <i class="ml- heartbeat"></i></span>
        </section>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <script src="~/Scripts/velocity.min.js"></script>
    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/lumx.min.js"></script>


    <script src="~/Scripts/jquery.sticky.js"></script>
    <script src="~/Scripts/jquery-scrollspy.min.js"></script>
    <script src="~/Scripts/jquery.scrollTo.min.js"></script>
    <script src="~/Scripts/jquery.barrating.min.js"></script>
    <script src="~/Scripts/app/app.js"></script>
    <script src="~/Scripts/app/common.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
