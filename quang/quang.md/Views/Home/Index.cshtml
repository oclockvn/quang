@{
    ViewBag.Title = "Home Page";
}

<div class="container">
    <div flex-container="row" flex-column="12">
        <div flex-item="7">
            <section class="posts">
                @for (int i = 0; i < 6; i++)
                {
                    @Html.Partial("_Post")
                }
            </section>

            <div class="post__paging text-center mt++ mb+++">
                <lx-button lx-type="raised" lx-size="l"><i class="mdi mdi-chevron-double-left"></i></lx-button>

                <ul class="pager list-unstyle m0">
                    @for (int i = 0; i < 6; i++)
                    {
                        <li><lx-button lx-type="fab" lx-size="l">@i</lx-button></li>
                    }
                </ul>

                <lx-button lx-type="raised" lx-size="l"><i class="mdi mdi-chevron-double-right"></i></lx-button>
            </div>
        </div>

        <div flex-item="5" class="right-content">
            <section class="feature feature--has-divider most-read">
                <h4 class="feature__title">most read</h4>
                <ul class="feature__content read--most m0 list-unstyle">
                    @for (int i = 0; i < 3; i++)
                    {
                        <li>
                            <div class="read">
                                <p>
                                    <a href="#" class="feature__permalink">Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium</a>
                                </p>
                                <div class="feature__pub">@DateTime.Now.ToString("hh:mm tt MM/dd/yyyy")</div>
                                <div class="stt__interactive quick--interactive feature__interactive">
                                    <ul class="list-unstyle m0 text-right">
                                        <li>
                                            <span>20</span> <lx-icon lx-id="comment-text" lx-size="s" lx-color="blue" lx-type="flat"></lx-icon>
                                        </li>
                                        <li>
                                            <span>20</span> <lx-icon lx-id="account-circle" lx-size="s" lx-color="blue" lx-type="flat"></lx-icon>
                                        </li>
                                        <li>
                                            <span>9</span> <lx-icon lx-id="star" lx-size="s" lx-color="blue" lx-type="flat"></lx-icon>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </li>
                    }
                </ul>
            </section>

            <section class="feature feature--has-divider most-read">
                <h4 class="feature__title">recent posts</h4>
                <ul class="feature__content read--most m0 list-unstyle">
                    @for (int i = 0; i < 3; i++)
                    {
                        <li>
                            <div class="read">
                                <p>
                                    <a href="#" class="feature__permalink">Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur</a>
                                </p>
                                <div class="feature__pub">@DateTime.Now.ToString("hh:mm tt MM/dd/yyyy")</div>
                                <div class="stt__interactive quick--interactive feature__interactive">
                                    <ul class="list-unstyle m0 text-right">
                                        <li>
                                            <span>20</span> <lx-icon lx-id="comment-text" lx-size="s" lx-color="blue" lx-type="flat"></lx-icon>
                                        </li>
                                        <li>
                                            <span>20</span> <lx-icon lx-id="account-circle" lx-size="s" lx-color="blue" lx-type="flat"></lx-icon>
                                        </li>
                                        <li>
                                            <span>9</span> <lx-icon lx-id="star" lx-size="s" lx-color="blue" lx-type="flat"></lx-icon>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </li>
                    }
                </ul>
            </section>

            <section class="feature feature--sm category">
                <h4 class="feature__title">tags</h4>
                <ul class="feature__content m0 list-unstyle">
                    @for (int i = 0; i < 10; i++)
                    {
                        <li>
                            <div class="clearfix cate">
                                <a href="#" class="cate__tag">#lorem ipsum</a>
                                <span class="cate__count">@((i + 1) * 10)</span>
                            </div>
                        </li>
                    }
                </ul>
            </section>
        </div>
    </div>

</div>